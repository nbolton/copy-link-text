{
  "manifest_version": 3,
  "minimum_chrome_version": "90",
  "name": "Copy link text",
  "version": "1.0.0",
  "author": "tophf",
  "description": "Adds a context menu to copy the clicked link's text",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "bg.js"
  }
}
